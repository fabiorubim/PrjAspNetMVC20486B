@model QuarkUp.CadCli.UI.Models.LoginVM

@{
    ViewBag.Title = "CadCli :: Clientes";
    ViewBag.SubTitle = "Login";
}

<div class="col-sm-6">
@*@using(Html.BeginForm(null,null,FormMethod.Post))*@

@using (Html.BeginForm(new{ReturnUrl = ViewBag.ReturnUrl}))
{
    if (ViewBag.isValid != null && !ViewBag.isValid){
      <div class="alert alert-danger">
        @Html.ValidationSummary()
      </div>
    }
    
    <div class="form-group"> 
        @Html.LabelFor(l=> l.UserName)
        @Html.TextBoxFor(l => l.UserName, new { @class = "form-control", autofocus=""})
        @Html.ValidationMessageFor(l=>l.UserName,"",new {@class="text-danger"})
    </div>
    
    <div class="form-group"> 
        @Html.LabelFor(l=> l.Password)
        @Html.TextBoxFor(l => l.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(l=>l.Password,"",new {@class="text-danger"})
    </div>
    
    <div>
        <button class="btn btn-default">Entrar</button>
        <a href="@Url.Action("Index","Home")">Cancelar</a>
    </div>
}
</div>